<!-- views/partials/header.ejs -->
<%- include('partials/navbar') %>
<% if (books.length ==0) { %>
    <div class="alert alert-danger container" role="alert">
       <p> No result Found. Please search again </p> <br>
        
      </div>
      <div class="container">
      <a href="/fetch"><button type="button" class="btn btn-primary">Go back to Search</button></a>
    </div>
<% } %>


<% books.forEach(book => { console.log(book)%>

<div class="jumbotron container">
    <h1 class="display-4"><%= book.title %> </h1>
    <p class="lead">Author: <%= book.by_statement %> </p>
    <p>Publish Date: <%= book.publish_date %> </p>
    <p>Number of Pages: <%= book.number_of_pages %> </p>
    <hr class="my-4">
    
    <div class= "container-fluid">
      <div class= "container-fluid">
        <p>Subjects: </p>
        
        <% try{book.subjects.forEach(ele => { %>
            <a class="btn btn-outline-primary btn-sm" href="<%= ele.url %>" target="_blank" role="button" style="margin:2px"><%=ele.name  %>  </a> 
            <% })} catch{ %>
              <div class="alert alert-warning container" role="alert">
                No subject information found.
              </div>
            <%} %>
        <br><br>
        <p>People: </p>
        <% try{book.people.forEach(ele => { %>
            <a class="btn btn-outline-warning btn-sm" href="<%= ele.url %>" target="_blank" role="button" style="margin:2px"><%=ele.name  %>  </a> 
        <% })} catch{ %>
          <div class="alert alert-warning container" role="alert">
            No people information found.
          </div>
        <%} %>
    <br><br>
    <a class="btn btn-success" href="<%= book.url %>" target="_blank" role="button" style="margin:2px">Go to Book Page</a> 
    
  </div>
<% }) %>

 
